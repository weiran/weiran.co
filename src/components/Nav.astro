---
import { site } from '../config/site'

const pathname = Astro.url.pathname.replace(/\/$/, '') || '/'
---

<nav class="nav">
  {site.nav.map((page) => (
    <div class="nav-item">
      <a href={page.href} aria-current={pathname === page.href ? 'page' : undefined}>
        {page.name}
      </a>
    </div>
  ))}
</nav>
